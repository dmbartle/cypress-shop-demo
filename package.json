{
  "name": "cypress-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "headTest": "npx cypress run --headed",
    "chromeTest": "npx cypress run --browser chrome",
    "recordTest": "npx cypress run --record --reporter mochawesome",
    "format": "eslint --fix '**/*.{js,ts,jsx,tsx}'"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "specPattern": "cypress/e2e/**/*.{feature,features}",
    "stepDefinitions": [
      "cypress/e2e/[filepath]/**/*.{js,ts}",
      "cypress/e2e/[filepath].{js,ts}",
      "cypress/e2e/[filepart]/common/**/*.{js,ts}"
    ],
    "html": {
      "enabled": true
    }
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.1.2",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@faker-js/faker": "^8.4.1",
    "cypress": "^13.7.1",
    "json-diff": "^1.0.6",
    "luxon": "^3.4.4"
  }
}
